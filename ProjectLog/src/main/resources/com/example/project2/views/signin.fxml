<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project2.controllers.SignInController"
            stylesheets="@style.css">

    <!-- Bên trái: lời chào -->
    <left>
        <VBox alignment="CENTER" spacing="10" styleClass="left-pane">
            <Label text="Hello, Welcome to Restaurant!" styleClass="welcome-text"/>
            <Label text="Don't have an account?" styleClass="sub-text"/>
            <Button text="Registration" onAction="#onSignUpLink" styleClass="switch-btn"/>
        </VBox>
    </left>

    <!-- Bên phải: form đăng nhập -->
    <center>
        <VBox alignment="CENTER" spacing="15" styleClass="form-pane">
            <Label text="Login" styleClass="form-title"/>

            <TextField fx:id="usernameField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <CheckBox fx:id="rememberMeCheckBox" text="Remember me"/>
            </HBox>

            <Button text="Login" onAction="#onLoginButtonClick" styleClass="login-btn"/>
            <Label fx:id="messageLabel" textFill="red"/>
            <Hyperlink text="Forgot password?" styleClass="forgot-link"/>
        </VBox>
    </center>

</BorderPane>

