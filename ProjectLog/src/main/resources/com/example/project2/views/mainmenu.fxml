<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project2.controllers.MainMenuController"
            prefWidth="800" prefHeight="600">

    <top>
        <Label text="🍽 Restaurant Management System"
               style="-fx-font-size: 22; -fx-font-weight: bold; -fx-padding: 15; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Button text="Manage Menu" onAction="#onManageMenu"/>
            <Button text="Manage Orders" onAction="#onManageOrders"/>
            <Button text="Manage Staff" onAction="#onManageStaff"/>
            <Button text="Logout" onAction="#onLogout"/>
        </VBox>
    </center>
</BorderPane>
